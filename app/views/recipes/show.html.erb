<h1>Recipe Show Page</h1>
<p>Name: <%= @recipe.name %></p>
<p>Complexity: <%= @recipe.complexity %></p>
<p>Genre: <%= @recipe.genre %></p>
<div id="ingredients">
  Ingredients:
  <% @ingredients.each do |ingredient| %>
    <p><%= "- #{ingredient.name}" %></p>
  <% end %> 
</div>
<p>Total Cost: <%= @recipe.total_cost %></p>

<div id="add_ingredient">
  <%= form_with url: "/recipes/#{@recipe.id}", method: :post, local: true do |form| %>
    <%= form.label :ingredient_id, "Ingredient ID Number:" %>
    <%= form.text_field :ingredient_id %> 
    <%= form.submit "Submit" %>
  <% end %>
</div>